# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /books                controllers.Application.anuncio()
GET     /criar					controllers.Application.criar()
POST    /criar                  controllers.Application.criar()
POST    /anuncio                  controllers.Application.newAnuncio()
POST    /anuncio/:id/delete       controllers.Application.deleteAnuncio(id: Long)

GET     /anuncio/addAnunciante        controllers.Application.addAnunciante(livro:Long, autor:String)